<h1>Details</h1>
<div class="pad-med z-depth-4">
  <div class="row">
    <div class="col s6">
      <img  class="responsive-img" src="@Model.Img" alt="">
    </div>
    <div class="col s6">
      <ul class="collection with-header">
        <li class="collection-item"> <span class="animal-name">@Model.Name</span></li>
        <li class="collection-item">
          Age:
          @Model.Age
        </li>

        <li class="collection-item">
          Type:
          @Model.Type
        </li>
        <li class="collection-item">
          Notes:
          @Model.Comment
        </li>

      </ul>

    </div>
  </div>
  <div class="row">

    @Html.ActionLink("Edit Details", "Edit", new {id = Model.AnimalId}, new { @class=" btn-large waves-effect waves-light cyan "})
    @Html.ActionLink("Delete Animal", "Delete", new {id = Model.AnimalId}, new { @class=" btn-large waves-effect waves-light red"})
  </div>
</div>
